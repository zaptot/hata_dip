<div class="album py-5 bg-light">
  <div class="container">
    <div class="list-title">
      <h1>My posts</h1>
      <a type="button" class="btn btn-success" href="/posts/new">Add Post</a>
    </div>

    <div class="row">
      <% @posts.each do |post| %>
        <%= link_to render(partial: 'posts/card', locals: { post: post }), post, class: 'col-md-4' %>
      <% end %>
    </div>
  </div>
</div>